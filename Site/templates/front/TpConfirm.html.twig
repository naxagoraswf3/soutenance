{% extends 'base.html.twig' %}

{% block title %}Confirmation de votre demande{% endblock %}

{% block body %}



    <main class="mt-5 pt-5">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <table class="table">
                            <thead class="black white-text">
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Nom</th>
                                <th scope="col">Prenom</th>
                                <th scope="col">email</th>
                                <th scope="col">Type de polymère</th>
                                <th scope="col">Méthode de transformation</th>
                                <th scope="col">Masterbatch</th>
                                <th scope="col">MFI de la résine de base</th>
                                <th scope="col">Fonction</th>
                                <th scope="col">Quantité</th>
                                <th scope="col">Complément d'information</th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr>
                                <th scope="row">{{ commande.nom }}</th>
                                <th scope="col">{{ commande.prenom }}</th>
                                <th scope="col">{{ commande.mail }}</th>
                                <th scope="col">{{ commande.polymere }}</th>
                                <th scope="col">{{ commande.methode }}</th>
                                <th scope="col">{{ commande.masterbatch }}</th>
                                <th scope="col">{{ commande.mfi }}</th>
                                <th scope="col">{{ commande. }}</th>
                                <th scope="col">{{ commande.quantite }}</th>
                                <th scope="col">{{ commande.complement }}</th>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </main>

{% endblock %}