{% extends 'base.html.twig' %}

{% block title %}Naxagoras-Tecnology{% endblock %}

{% block body %}



  <main class="mt-5 pt-5">
    <div class="container">
      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-body">
              
              <form class="text-center p-5" action="#!">

                  <p class="h4 mb-4">Thermoplastiques</p>

                  <div class="form-row mb-4">
                      <div class="col">
                          <input type="text" id="Poly" class="form-control" placeholder="Type de polymère">
                      </div>
                      <div class="col">
                          <input type="text" id="Method" class="form-control" placeholder="Méthode de transformation">
                      </div>
                  </div>
                  <div>
                  <input type="radio" id="Choice1"
                   name="choice" value="Masterbatch">
                  <label for="Choice1">Masterbatch compatible accepté</label>

                  <input type="radio" id="Choice2"
                   name="choice" value="Machin">
                  <label for="Choice2">Truc je sais plus quoi</label>
                </div>
                <div class="form-row mb-4">
                  <input type="text" id="MFI" class="form-control" placeholder="MFI de la résine de base">
                </div>
              
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

{% endblock %}

